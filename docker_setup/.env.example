#################################
#  Public URL n8n should advertise
#################################
N8N_HOST=n8n.your-domain.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.your-domain.com/
VUE_APP_URL_BASE_API=https://n8n.your-domain.com/

#################################
#  Listener inside the container
#################################
N8N_PORT=5678
N8N_LISTEN_ADDRESS=0.0.0.0

#################################
#  Security
#################################
N8N_SECURE_COOKIE=true

# optional basic auth for the editor
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=    # PLEASE SET A SECURE PASSWORD HERE

#################################
#  Postgres
#################################
POSTGRES_USER=n8n
POSTGRES_PASSWORD=    # PLEASE SET A SECURE PASSWORD HERE
POSTGRES_DB=n8n

#################################
#  Misc
#################################
N8N_USER_MANAGEMENT_DISABLED=false
GENERIC_TIMEZONE=Europe/Berlin